---
export interface Props {
  post: any;
}

import { parseISO, format } from 'date-fns';
import { getSlugFromPath } from '@/utils/getSlugFromPath';

const { post } = Astro.props;
const url = '/blog/' + getSlugFromPath(post.file);
const date = parseISO(post.frontmatter.pubDate);
const formattedDate = format(date, 'LLLL d, yyyy');
---

<a href={url}>
  <div class="space-y-2 mt-6 group">
    <h4 class="text-xl font-medium group-hover:underline dark:group-hover:text-yellow-200">{post.frontmatter.title}</h4>
    <p class="opacity-90 font-light">{formattedDate}</p>
    <p class="opacity-90 italic">{post.frontmatter.summary}</p>
  </div>
</a>
